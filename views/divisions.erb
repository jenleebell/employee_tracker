<div class="container">
	<div class="jumbotron">
		<h2>Divisions</h2>
		<%if @divisions.any? %>
			<ul>
				<% @divisions.each do |division| %>
				<li><a href="/divisions/<%= division.id() %>"><%= division.name() %></a></li>
				<% end %>
			</ul>
		<% else %>
				<p>There are no divisions yet -- add one below.</p>
		<% end %>
		<a href="/divisions/new" class="btn btn-success">Add a division</a>
		<br>
		<br>
		<a href="/clear" class="btn btn-danger">Clear all divisions</a>
	</div>
</div>
