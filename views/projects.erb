<div class="container">
	<div class="jumbotron">
		<h2>Projects</h2>
		<%if @projects.any? %>
		<ul>
			<% @projects.each do |project| %>
			<li><a href="/projects/<%= project.id() %>"><%= project.project_name() %></a></li>
			<% end %>
		</ul>
		<% else %>
		<p>There are no projects yet!</p>
		<% end %>
		<a href="/projects/new" class="btn btn-success">Add a project</a>
		<br>
		<br>
		<a href="/clear" class="btn btn-danger">Clear all projects</a>
	</div>
</div>
